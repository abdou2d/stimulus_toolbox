<div class="flex items-center justify-between mt-1">
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm leading-5 text-gray-700 ml-1">
        <span class="font-medium"><%= @pagy.count %></span>
        Results
        <em class="text-gray-400">
          - showing page
          <span class="font-medium"><%= @pagy.page %></span>
          of
          <span class="font-medium"><%= @pagy.pages %></span>
        </em>
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex shadow-sm">
        <% if @pagy.pages > 1 %>
          <%= link_to paginated_projects_path(page: prev_page), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" do %>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
          <% @pagy.series.each do |item| %>
            <% if item == :gap %>
              <li class="page-item disabled"><a class="page-link">...</a></li>
            <% else %>
              <%= link_to item, paginated_projects_path(page: item), class: "-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150" %>
            <% end %>
          <% end %>
          <%= link_to paginated_projects_path(page: next_page), class: "-ml-px relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" do %>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
